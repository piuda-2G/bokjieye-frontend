<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".Benefit_specific">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:id="@+id/recentinfoTop"
        android:orientation="vertical"
        android:background="@drawable/back_color">


        //글꼴 scdream7로 되어있었음

        <Button
            android:id="@+id/benefitinfo_back"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:background ="@drawable/backbutton"
            app:layout_constraintBottom_toTopOf="@id/roundtop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/subject_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = ""
            android:fontFamily="@font/notosanskrblack"
            android:textSize="27dp"
            android:textColor="#ffffff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/roundtop"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/roundtop"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/recentinfotop"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    //하단 데이터
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/b_name_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text = "제목"
                android:fontFamily="@font/notosanskrbold"
                android:gravity="center"
                android:textColor="#020715"
                android:textSize="25dp"/>


            <ScrollView
                android:id="@+id/bio_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#020715"
                        android:fontFamily="@font/notosanskrmedium"
                        android:text="지원 내용"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/b_contents_2"
                        android:fontFamily="@font/notosansregular"
                        android:textColor="#000000"
                        android:includeFontPadding="false"
                        android:text=""
                        android:layout_marginBottom="5dp"
                        android:textSize="15sp" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:gravity = "center"
                        android:layout_marginTop = "5dp"
                        android:layout_marginBottom = "5dp"
                        android:background="#D9D9D9"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#020715"
                        android:fontFamily="@font/notosanskrmedium"
                        android:text="지원 대상"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/b_who_2"
                        android:fontFamily="@font/notosansregular"
                        android:textColor="#000000"
                        android:includeFontPadding="false"
                        android:text=""
                        android:layout_marginBottom="5dp"
                        android:textSize="15sp" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:gravity = "center"
                        android:layout_marginTop = "5dp"
                        android:layout_marginBottom = "5dp"
                        android:background="#D9D9D9"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#020715"
                        android:fontFamily="@font/notosanskrmedium"
                        android:text="신청방법 또는 문의처"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/b_howto_2"
                        android:fontFamily="@font/notosansregular"
                        android:textColor="#000000"
                        android:includeFontPadding="false"
                        android:text=""
                        android:textSize="15sp"
                        android:layout_marginBottom="10sp"/>

                </LinearLayout> //item



            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>